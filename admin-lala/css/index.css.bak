	overflow:hidden;
}
div.banner-container div.d4{
	width: 250px;
	height: 206px;
}
div.category-content div.menu-item{
	width:770px;
	height:548px;
	background:#fff;
	display:none;
	position:absolute;
	left:175px;
	top:0px;
}
div.category-content  li:hover div.menu-item{
	display:block;
	z-index:2000px;
}
div.category-content  li:hover div.menu-item{
	display:block;
	z-index:2000px;
}
div.category-content div.sort-side{
	display:flex;
	flex-wrap:wrap;
	justify-content:space-between;
	margin:20px 50px 30px 50px;
}
div.category-content div.sort-side dd span{
	color:##888888;
}
div.category-content div.sort-side dd span:hover{
	color:#D2364C;
}
div.sort-side dl.dl-sort{
	width:290px;
	height:100%;
	display:flex;
	flex-wrap:wrap;
}
div.sort-side dl.dl-sort dt{
	color:#DB3E54;
	font-size:14px;
	font-style:bold;
	width:290px;
}
div.sort-side dl.dl-sort dd{
	margin:5px 5px 0 0;
	padding:2px 10px;
	border:1px solid #E6E6E6;
}
div.category-content div.brand-side{
	margin-left:50px;
}
div.brand-side dl.dl-sort{
	wdith:700px;
	height:100%;
	display:flex;
	flex-wrap:wrap;
}
div.brand-side dl.dl-sort dt{
	width:700px;
	border-bottom:1px solid #EAE9E9;
}
div.brand-side dl.dl-sort span{
	margin:10px 10px 0 0;
	text-align:middle;
	line-height:30px;
}
div.category-content div.brand-side .banner-container span:hover{
	color:#D2364C;
}
