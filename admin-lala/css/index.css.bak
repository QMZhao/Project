/*导航链接*/
div.nav-title div.category-nav{
	display:flex;
}
div.category-nav div.category{
	width:180px;
	height:46px;
	background:#D2364C;
	color:#fff;
	text-align:center;
	line-height:46px;
	font-size:16px;	
}
div.category-nav div.nav-menu{
	line-height:46px;
	font-size:16px;
	margin-left:20px;
	font-weight:700px;
	vertical-align:middle;
}
div.category-nav div.nav-menu a{margin-right:20px;}
div.category-nav div.nav-menu span{	
	margin-right:20px;
	color:#000;
}
div.nav-title div.nav-line b{
	display:block;
	width:100%;
	border-bottom:2px solid #d2364c;
	position:absolute;
	top:180px;
	z-index:5;
}
/* banner广告样式 */
div.banner{
	width: 1200px;
	height: 548px;
	margin:0 auto;
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
}
div.banner div.category-content{
	width:180px;
	height:548px;
	position:relative;
}
div.category-content div.category-info{
	width:180px;
	height:36px;
	background:#2B2B2B;
	color:#fff;
	border:1px solid #333333;
 	text-align:center;
	line-height:36px;
	box-sizing:border-box;
	display:block;
}
div.category-content div.category-info:hover{
	color:#4C4C4C;
	background:#fff;
}
div.category-content div.category-info img{
	width:22px;
	height:22px;
 	margin-left:10px;
}
div.category-content div.category-info span{
	margin-left:10px;
}
div.category-content div.category-info em{
	margin-left:30px;
}
div.banner div.banner-container{
	width: 1013px;
	height: 548px;
	display: flex;
	justify-content:space-between;
	flex-wrap: wrap;
}
div.banner-container>div{
	/* background:#fac; */
}
div.banner-container div.ck-slide-dir{
	width: 760px;
	height: 320px;
	overflow:hidden;
}
div.ck-slide-dir ul.ck-slide-wrapper img{
	
}
div.banner-container div.d3{
	width: 245px;
	height:320px;
	background:#F9F9F9;
}
div.d3 div.lamp-title{
	width:215px;
	border-bottom:1px solid #F1F1F1;
	margin:15px;
	line-height:30px;

}
div.d3 div.lamp-title span{
	color:#EB3341;
	font-size:16px;		
}
div.d3 div.lamp-title span:first-child{
	margin-right:15px;		
}
div.d3 div.demo{	
	width:215px;
	margin:15px;
	line-height:30px;
	
}
div.d3 div.demo li{
	width:215px;
